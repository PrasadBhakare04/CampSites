<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campground" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="#title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="#location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="#image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="#price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" id="price" placeholder="0.00" name="campground[price]"
                            required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="#description">Add Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" required></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
            <a href="/campground">All Campgrounds</a>
        </div>
    </div>