<% layout('layouts/boilerplate')%>
    <h1 class="mt-3">All Campgrounds</h1>
    <div><a href="/campground/new">Add a Campground</a></div>
    <ul>
        <% for(let campground of campgrounds) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <image class="img-fluid" src="<%= campground.images[0].url%>"></image>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title%>
                            </h5>
                            <p class="card-text">
                                <%= campground.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location%>
                                </small>
                            </p>
                            <a href="/campground/<%= campground._id%>" class="btn btn-primary">View <%=
                                    campground.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>